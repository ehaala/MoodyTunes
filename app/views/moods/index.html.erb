<h1 class="modak margintop shadow">MyMoods</h1>

<div class="row extrapad">
	<% @current_user.moods.each do |mood| %>
		<div class="col-md-6 maxheight marginbtm">
			<ul class="mui-tabs__bar mui-tabs__bar--justified">
			  <li class="mui--is-active"><a data-mui-toggle="tab" data-mui-controls=<%= mood.id.to_s + 'a'%>>Image</a></li>
			  <li><a data-mui-toggle="tab" data-mui-controls=<%= mood.id.to_s + 'b'%>>Bar</a></li>
			  <li><a data-mui-toggle="tab" data-mui-controls=<%= mood.id.to_s + 'c'%>>Pie</a></li>
			</ul>

			<div class="mui-tabs__pane mui--is-active" id=<%= mood.id.to_s + 'a'%>>
				<img src=<%= mood.image %> class="moods boxshadow">
			</div>
			<div class="mui-tabs__pane" id=<%= mood.id.to_s + 'b'%>>
				<%= bar_chart [
				['Anger', mood.anger.to_f * 10],
				['Contempt', mood.contempt.to_f * 10],
				['Disgust', mood.disgust.to_f * 10],
				['Fear', mood.fear.to_f * 10],
				['Sadness', mood.sadness.to_f * 10],
				['Happiness', mood.happiness.to_f * 10],
				['Neutral', mood.neutral.to_f * 10],
				['Surprise', mood.surprise.to_f * 10]
			], max: 10 %>
			</div>
			<div class="mui-tabs__pane" id=<%= mood.id.to_s + 'c'%>>
				<%= pie_chart [
				['Anger', mood.anger.to_f * 10],
				['Contempt', mood.contempt.to_f * 10],
				['Disgust', mood.disgust.to_f * 10],
				['Fear', mood.fear.to_f * 10],
				['Sadness', mood.sadness.to_f * 10],
				['Happiness', mood.happiness.to_f * 10],
				['Neutral', mood.neutral.to_f * 10],
				['Surprise', mood.surprise.to_f * 10]
			], legend: false, colors: ['#2a57b8', '#2a808f', '#2a729c','#2a64aa','#2aa966','#2a9b74','#2a8d81','#2ab759'] %>
			</div>
			<%= link_to 'Remove', mood_path(mood), method: :delete, :class => 'mui-btn mui-btn--primary button' %>
			<hr />
		</div>
	<% end %>
</div>