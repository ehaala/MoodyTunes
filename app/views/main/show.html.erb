	<div class="row">
		<div class="col-md-6">
			<div class="row">
				<div class="col-md-12 boxshadow charts">
					<ul class="mui-tabs__bar mui-tabs__bar--justified">
					  <li class="mui--is-active"><a data-mui-toggle="tab" data-mui-controls="pane-justified-1">Bar Chart</a></li>
					  <li><a data-mui-toggle="tab" data-mui-controls="pane-justified-2">Pie Chart</a></li>
					</ul>
					<div class="mui-tabs__pane mui--is-active" id="pane-justified-1">
						<%= bar_chart [
						['Anger', @anger.to_f * 10],
						['Contempt', @contempt.to_f * 10],
						['Disgust', @disgust.to_f * 10],
						['Fear', @fear.to_f * 10],
						['Sadness', @sadness.to_f * 10],
						['Happiness', @happiness.to_f * 10],
						['Neutral', @neutral.to_f * 10],
						['Surprise', @surprise.to_f * 10]
					], max: 10%>
					</div>

					<div class="mui-tabs__pane" id="pane-justified-2">
						<%= pie_chart [
						['Anger', @anger.to_f * 10],
						['Contempt', @contempt.to_f * 10],
						['Disgust', @disgust.to_f * 10],
						['Fear', @fear.to_f * 10],
						['Sadness', @sadness.to_f * 10],
						['Happiness', @happiness.to_f * 10],
						['Neutral', @neutral.to_f * 10],
						['Surprise', @surprise.to_f * 10]
					], legend: false, colors: ['#2a57b8', '#2a808f', '#2a729c','#2a64aa','#2aa966','#2a9b74','#2a8d81','#2ab759'] %>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-md-12 marginbtm">
					<img class="boxshadow upload" src="<%= @url %>">

					<%= form_for @mood do |form| %>
						<%= form.hidden_field :image, :value => @url %>
						<%= form.hidden_field :anger, :value => @anger %>
						<%= form.hidden_field :contempt, :value => @contempt %>
						<%= form.hidden_field :disgust, :value => @disgust %>
						<%= form.hidden_field :fear, :value => @fear %>
						<%= form.hidden_field :sadness, :value => @sadness %>
						<%= form.hidden_field :happiness, :value => @happiness %>
						<%= form.hidden_field :neutral, :value => @neutral %>
						<%= form.hidden_field :surprise, :value => @surprise %>
						<%= form.hidden_field :user_id, :value => @current_user.id %>
						<br >
						<%= form.submit 'Save Mood', :class => 'mui-btn mui-btn--primary button' %>
					<% end %>

				</div>
			</div>
		</div>

